{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "paths": {
    "@blocks/*": ["blocks/*"],
    "@components/*": ["src/components/*"],
    "@styles/*": ["src/styles/*"],
    "@lib/*": ["src/lib/*"],
    "@modules/*": ["src/modules/*"],
    "@pages/*": ["pages/*"],
    "@generate/*": ["generate/*"],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
